
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Comment{
    id          String   @id @default(cuid())
    text        String
    authorId    String
    postId      String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}